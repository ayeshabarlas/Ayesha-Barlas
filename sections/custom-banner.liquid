<section class="figma-banner" style="background-image: url({{ section.settings.background | image_url }});">

  <div class="figma-banner-wrapper">
    <div class="figma-text-box">
      <h1>{{ section.settings.heading }}</h1>
      <p class="figma-subtext">{{ section.settings.subtext }}</p>
      <a class="figma-button" href="{{ section.settings.button_link }}"> {{ section.settings.button_label }} â†’ </a>
    </div>
  </div>
</section>

<!-- âœ… Bottom Strip Like in Figma -->
<section class="figma-bottom-strip">
  {{ section.settings.bottom_text }}
</section>

<style>
    .figma-banner {
      width: 100%;
      height: 578px;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      display: flex;
      align-items: center;
      padding-left: 80px;
      box-sizing: border-box;
    }

    .figma-banner-wrapper {
      max-width: 1400px;
      width: 100%;
      display: flex;
      align-items: flex-start;
    }

    .figma-text-box {
    background-color: rgba(255, 255, 255, 0.95); /* White box with slight transparency */
    padding: 40px;
    max-width: 520px;
    border-radius: 12px;
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1); /* subtle shadow for "lifted" effect */
  }

    .figma-text-box h1 {
      font-size: 56px;
      font-weight: bold;
      margin-bottom: 20px;
      color: #000;
    }

    .figma-subtext {
      font-size: 16px;
      color: #000;
      line-height: 1.6;
      margin-bottom: 30px;
    }

    .figma-button {
      display: inline-block;
      background: black;
      color: white;
      font-size: 14px;
      font-weight: bold;
      padding: 12px 24px;
      text-decoration: none;
      border: none;
      transition: all 0.3s ease;
    }

    .figma-button:hover {
      background: white;
      color: black;
      border: 2px solid black;
    }

    /* âœ… Bottom Strip Styling */
    .figma-bottom-strip {
      background-color: #f8f8f8;
      border-top: 1px solid #ddd;
      text-align: center;
      font-size: 13px;
      color: #000;
      padding: 12px;
      font-weight: 400;
    }

    /* ðŸ‘Ÿ Mobile Styles */
    @media (max-width: 768px) {
      .figma-banner {
        height: auto;
        padding: 40px 20px;
      }

      .figma-text-box {
        max-width: 100%;
        text-align: center;
      }

      .figma-banner-wrapper {
        justify-content: center;
      }

      .figma-text-box h1 {
        font-size: 32px;
      }
    }
</style>

{% schema %}
{
  "name": "Figma Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom Strip Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Figma Banner Final"
    }
  ]
}
{% endschema %}
